---
import Capsule from "../ui/Capsule.astro";

interface Props {
  variant?: "default" | "center";
  linkEnabled?: boolean;
  size?: string;
}

const { variant = "default", linkEnabled = false, size = "md" } = Astro.props;

// Explicitly define tools for each category - NO MORE SLICING!
const frontEndTools = ["html", "javascript", "typescript", "astro", "react", "css", "tailwind", "bootstrap"];
const backEndTools = ["node", "express", "python", "firebase", "mysql", "mongodb"];
const devOpsTools = ["azure", "aws", "docker", "git", "ci/cd"];
const designTools = ["figma", "cloudflare", "vercel", "netlify"];
---

<div class="flex flex-col gap-8">
  <!-- Front-end Development -->
  <div>
    <h3 class="text-xl font-bold mb-4">Front-end Development</h3>
    <div class="flex flex-wrap gap-4">
      {frontEndTools.map((tool) => (
        <Capsule lang={tool} linkEnabled={linkEnabled} size={size} />
      ))}
    </div>
  </div>

  <!-- Back-end Development -->
  <div>
    <h3 class="text-xl font-bold mb-4">Back-end Development</h3>
    <div class="flex flex-wrap gap-4">
      {backEndTools.map((tool) => (
        <Capsule lang={tool} linkEnabled={linkEnabled} size={size} />
      ))}
    </div>
  </div>

  <!-- DevOps & Cloud -->
  <div>
    <h3 class="text-xl font-bold mb-4">DevOps & Cloud</h3>
    <div class="flex flex-wrap gap-4">
      {devOpsTools.map((tool) => (
        <Capsule lang={tool} linkEnabled={linkEnabled} size={size} />
      ))}
    </div>
  </div>

  <!-- Design & Deployment -->
  <div>
    <h3 class="text-xl font-bold mb-4">Design & Deployment</h3>
    <div class="flex flex-wrap gap-4">
      {designTools.map((tool) => (
        <Capsule lang={tool} linkEnabled={linkEnabled} size={size} />
      ))}
    </div>
  </div>
</div>
