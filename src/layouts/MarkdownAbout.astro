---
import Layout from "./Layout.astro";
import { Icon } from "astro-icon/components";
import Heading from "../components/ui/Heading.astro";
import NavArticle from "../components/layout/NavArticle.astro";
import Contact from "../components/portfolio/Contact.astro";
import PageHeader from "../components/layout/PageHeader.astro";
const { frontmatter } = Astro.props;
---

<script>
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll("h1, h2, h3, h4, h5, h6").forEach((header) => {
      header.classList.add("scroll-m-28");
    });
  });
</script>

<Layout
  pageTitle={frontmatter.title}
  description={frontmatter.description}
  ogimage={frontmatter.image}
>
  <PageHeader 
    title="About" 
    titleGradient="TapfarTech" 
    icon="code"
  />
  <section
    class="w-full px-8 max-sm:px-4 py-4 flex flex-row justify-center gap-6"
  >
    <div class="w-64 max-xl:hidden"></div>

    <article class="max-w-3xl max-md:w-full pt-8 mt-4 max-sm:mt-0">
      <div class="bg-white dark:bg-gray-800/50 p-8 rounded-2xl shadow-sm dark:shadow-gray-800/30 border border-neutral-100 dark:border-gray-700/30 mb-8">
        <div class="flex flex-col md:flex-row items-center gap-8 mb-8">
          <div class="md:w-1/3">
            <div class="aspect-square max-w-[180px] mx-auto">
              {frontmatter.image?.url ? (
                <div class="relative overflow-hidden rounded-full shadow-lg">
                  <img 
                    src={frontmatter.image.url} 
                    alt={frontmatter.image?.alt || "Profile Image"}
                    class="w-full h-full object-cover"
                  />
                </div>
              ) : (
                <div class="flex items-center justify-center h-full w-full bg-gradient-to-br from-mint-400/20 to-blue-500/20 dark:from-mint-800/30 dark:to-blue-800/30 rounded-full shadow-lg">
                  <div class="logo text-3xl text-mint-500 dark:text-mint-400 text-center relative before:absolute before:left-1/2 before:top-1/2 before:h-full before:w-[40%] before:-translate-x-1/2 before:-translate-y-1/2 before:rounded-full before:bg-[#50fd8f25] before:blur-3xl before:opacity-80 before:-z-1">TT</div>
                </div>
              )}
            </div>
          </div>
          
          <div class="md:w-2/3 text-center md:text-left">
            <div class="mb-2">
              <span class="inline-block px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 text-sm font-medium">
                {frontmatter.title === "About TapfarTech" ? "Professional Web Development" : "IT Professional & Marine Corps Reservist"}
              </span>
            </div>
            <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-3">{frontmatter.title === "About TapfarTech" ? "TapfarTech" : "Jacob Tapfar | TapfarTech"}</h1>
            <p class="text-gray-600 dark:text-gray-300">
              {frontmatter.title === "About TapfarTech" 
                ? "Modern web development solutions with cutting-edge technologies for businesses of all sizes. Creating exceptional digital experiences that drive results."
                : "Empowering small businesses with professional web solutions and strategic IT support. Bringing military precision to every technology project."
              }
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800/50 p-8 rounded-2xl shadow-sm dark:shadow-gray-800/30 border border-neutral-100 dark:border-gray-700/30">
        <div class="prose prose-lg dark:prose-invert max-w-none prose-headings:text-gray-800 dark:prose-headings:text-white prose-p:text-gray-600 dark:prose-p:text-gray-300" id="content">
          <slot />
        </div>
      </div>
    </article>
    <NavArticle title={frontmatter.title} />
  </section>
    <div class="flex flex-col gap-8 pt-8 max-w-4xl mx-auto">
      <div class="flex gap-4 items-center justify-center">
        <Icon class="text-3xl text-white" name="briefcase" />
      </div>

    </div>
  </section>
  <section class="py-16 px-8 max-md:py-12 mt-10 mb-20 scroll-m-16" id="stack">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-2xl font-semibold text-center mb-10 text-gray-800 dark:text-white">Technical Expertise</h2>
      
      <div class="grid md:grid-cols-3 gap-8 mb-10">
        <div class="bg-white dark:bg-gray-800/50 rounded-2xl p-6 shadow-sm dark:shadow-gray-800/30 border border-neutral-100 dark:border-gray-700/30">
          <div class="mb-4">
            <span class="inline-block p-3 rounded-lg bg-orange-100 dark:bg-orange-900/30 text-orange-600 dark:text-orange-400">
              <Icon name="html" class="h-6 w-6" />
            </span>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-800 dark:text-white">Front-end</h3>
          <p class="text-gray-600 dark:text-gray-300">Modern frameworks and libraries for creating responsive, user-friendly interfaces.</p>
          
          <ul class="space-y-2 mt-4">
            <li class="flex items-center text-sm">
              <Icon name="javascript" class="h-4 w-4 mr-2 text-blue-500" />
              <span class="text-gray-700 dark:text-gray-300">React & Modern JavaScript</span>
            </li>
            <li class="flex items-center text-sm">
              <Icon name="astro" class="h-4 w-4 mr-2 text-purple-500" />
              <span class="text-gray-700 dark:text-gray-300">Astro Framework</span>
            </li>
            <li class="flex items-center text-sm">
              <Icon name="tailwind" class="h-4 w-4 mr-2 text-teal-500" />
              <span class="text-gray-700 dark:text-gray-300">TailwindCSS & UI Design</span>
            </li>
          </ul>
        </div>
        
        <div class="bg-white dark:bg-gray-800/50 rounded-2xl p-6 shadow-sm dark:shadow-gray-800/30 border border-neutral-100 dark:border-gray-700/30">
          <div class="mb-4">
            <span class="inline-block p-3 rounded-lg bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400">
              <Icon name="node" class="h-6 w-6" />
            </span>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-800 dark:text-white">Back-end</h3>
          <p class="text-gray-600 dark:text-gray-300">Robust server-side solutions that power secure and scalable applications.</p>
          
          <ul class="space-y-2 mt-4">
            <li class="flex items-center text-sm">
              <Icon name="node" class="h-4 w-4 mr-2 text-green-500" />
              <span class="text-gray-700 dark:text-gray-300">Node.js & Express</span>
            </li>
            <li class="flex items-center text-sm">
              <Icon name="python" class="h-4 w-4 mr-2 text-blue-500" />
              <span class="text-gray-700 dark:text-gray-300">Python Development</span>
            </li>
            <li class="flex items-center text-sm">
              <Icon name="firebase" class="h-4 w-4 mr-2 text-orange-500" />
              <span class="text-gray-700 dark:text-gray-300">Firebase & Cloud Databases</span>
            </li>
          </ul>
        </div>
        
        <div class="bg-white dark:bg-gray-800/50 rounded-2xl p-6 shadow-sm dark:shadow-gray-800/30 border border-neutral-100 dark:border-gray-700/30">
          <div class="mb-4">
            <span class="inline-block p-3 rounded-lg bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400">
              <Icon name="cloudflare" class="h-6 w-6" />
            </span>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-800 dark:text-white">DevOps</h3>
          <p class="text-gray-600 dark:text-gray-300">Streamlined deployment and infrastructure management for optimal performance.</p>
          
          <ul class="space-y-2 mt-4">
            <li class="flex items-center text-sm">
              <Icon name="aws" class="h-4 w-4 mr-2 text-orange-500" />
              <span class="text-gray-700 dark:text-gray-300">AWS & Cloud Services</span>
            </li>
            <li class="flex items-center text-sm">
              <Icon name="git" class="h-4 w-4 mr-2 text-red-500" />
              <span class="text-gray-700 dark:text-gray-300">Git & Version Control</span>
            </li>
            <li class="flex items-center text-sm">
              <Icon name="docker" class="h-4 w-4 mr-2 text-blue-500" />
              <span class="text-gray-700 dark:text-gray-300">Docker & Containerization</span>
            </li>
          </ul>
        </div>
      </div>
      
      <div class="text-center bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl p-10 text-white shadow-lg">
        <h3 class="text-2xl font-bold mb-6">Military Precision Meets Technical Excellence</h3>
        <p class="text-lg max-w-2xl mx-auto opacity-90">
          I bring the discipline and attention to detail from my military service to every technical solution, ensuring your project is delivered with excellence.
        </p>
      </div>
    </div>
  </section>
  <Contact />
</Layout>

<style>
  /* Reset unexpected flex style on svg elements */
  svg {
    display: inline;
  }
</style>

