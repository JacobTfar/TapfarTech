---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/blog/Hero.astro";
import Tags from "../../components/blog/Tags.astro";
import ListPosts from "../../components/blog/ListPosts.astro";
import PageHeader from "../../components/layout/PageHeader.astro";

const pageTitle = "Web Development and Technology Blog | Jacob Tapfar | TapfarTech";
const description = "Welcome to my blog, where I share my passion for frontend development, web design, and the latest technology trends.";
const ogimage ={
    url: "/images/blogimage.webp",
    alt: "TapfarTech logo with green background and light effect. Text: 'Web Development and Technology Blog' and URL 'www.tapfartech.com'."
};
---

<Layout pageTitle={pageTitle} description={description} ogimage={ogimage}>
    <PageHeader 
        title="My" 
        titleGradient="Blog" 
        subtitle="Thoughts, tutorials, and insights on web development, IT, and technology trends"
        icon="md"
    />
   
    <div class="px-8 max-sm:px-4 py-8">
        <Tags />
        <ListPosts />
    </div>

</Layout>
